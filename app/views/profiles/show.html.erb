<div class="col-lg-12 col-sm-12 full-width">
	<div class="card hovercard">
		<div class="card-background">
			<img class="card-bkimg" alt="" src="http://en.blog.hotelnights.com/wp-content/uploads/2013/08/surfing-california.jpg">
		</div>
		<div class="useravatar">
			<img alt="" src="<%= "#{@profile.avatar.url(:medium)}" %>">
		</div>
		<div class="card-info"> <span class="card-title"><%= "#{@profile.email}" %> </span>
	</div>
</div>
<div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
	<div class="btn-group" role="group">
		<button type="button" id="stars" class="btn btn-primary" href="#tab1" data-toggle="tab"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
		<div class="hidden-xs">My profile</div>
		</button>
	</div>
	<div class="btn-group" role="group">
		<button type="button" id="favorites" class="btn btn-default" href="#tab2" data-toggle="tab"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
		<div class="hidden-xs">My adds</div>
		</button>
	</div>
	<div class="btn-group" role="group">
		<button type="button" id="following" class="btn btn-default" href="#tab3" data-toggle="tab"><span class="glyphicon glyphicon-camera" aria-hidden="true"></span>
		<div class="hidden-xs">My contributions</div>
		</button>
	</div>
</div>
<div class="well">
	<div class="tab-content">
		<div class="tab-pane fade in active" id="tab1">
			<div class="row">
				<div class="col-md-4">
					<h3> <%= @profile.business_name %></h3>
					<p><img class="useravatar" src="<%= current_user.business_avatar.url(:medium) %>"></p>
				</div>
				<div class="col-md-4">
					<p> <%= @profile.address %>, <%= @profile.city %>, <%= @profile.zip_code %> </p>
					<p> <%= @profile.business_type %> </p>
					<p> <%= @profile.website_link %> </p>
					<p> <%= @profile.business_description %> </p>
				</div>
				<div class="col-md-4">
					<%= link_to "Edit my profile", edit_user_registration_path %>
				</div>
			</div>
		</div>
		<div class="tab-pane fade in" id="tab2">
			<h3>This is tab 2</h3>
		</div>
		<div class="tab-pane fade in" id="tab3">
			<h3>This is tab 3</h3>
		</div>
	</div>
</div>
</div>