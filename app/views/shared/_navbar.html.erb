<div class="navcontainer">
	<div class="header">
		<div class="header-top">
			<div class="top-logo">
				<%= link_to image_tag('/images/neptunelogo.jpg'), root_path %>
			</div>
			<div class="top-right-buttons">
				<% if current_user %>
				<%= link_to 'Logout', destroy_user_session_path, method: :delete %>
				<%= link_to image_tag(current_user.avatar.url(:thumb)), profile_path(current_user) %>
				<% else %>
					<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
						<div class="top-right-button-elem-wrapper">
						<div class="top-right-button-elem">
						<%= f.email_field :email, :placeholder => "Email", autofocus: true, :class => 'form-control smaller-input' %>
						<%= f.password_field :password, autocomplete: "off", :placeholder => "Password", :class => 'form-control smaller-input' %>
						</div>
						<div class="top-right-button-elem">
						<%= button_tag(type: 'submit', class: "btn btn-primary") do %>Log in<%end%>
						</div>

						</div>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>