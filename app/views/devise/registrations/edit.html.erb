<h2 class="centered">Edit <%= resource_name.to_s.humanize %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= devise_error_messages! %>
<div class="col-md-4">
  <h4>User Information</h4>
  <div class="field">
    <p><img class="avatar-edit" src="<%= current_user.avatar.url(:medium) %>"></p>
    <%= f.label :avatar %><br/ >
    <%= f.file_field :avatar %>
  </div>
  <div class="field">
    <%= f.label :username %><br/ >
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="field">
    <%= f.label :password %> <i> - leave blank if you don't need to change it</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  <div class="field">
    <%= f.label :current_password %> <span style="color:red"><i> - needed to confirm any change</i></span><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>
</div>
<div class="col-md-4">
  <h4>My business Information</h4>
  <div class="field">
    <p><img class="avatar-edit" src="<%= current_user.business_avatar.url(:medium) %>"></p>
    <%= f.label :business_avatar %><br/ >
    <%= f.file_field :business_avatar %>
  </div>
  
  <div>
    <%= f.label :business_name %><br/ >
    <%= f.text_field :business_name %>
  </div>
  <div>
    <%= f.label :address %><br/ >
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :city %><br/ >
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :zip_code %><br/ >
    <%= f.text_field :zip_code %>
  </div>
  <div>
    <%= f.label :business_type %><br/ >
    <%= f.select(:business_type, ['Other','Surfshop', 'Restaurant', 'Photograph']) %>
  </div>
  <div>
    <%= f.label :business_description %><br/ >
    <%= f.text_area :business_description %>
  </div>
  <div>
    <%= f.label :website_link %><br/ >
    <%= f.text_field :website_link %>
  </div>
</div>
<div class="col-md-4">
  <h4>My business Location</h4>
  <div>
    <%= f.label :longitude %><br/ >
    <%= f.number_field :longitude, :class => 'text_field', :step => 'any' %>
  </div>
  <div>
    <%= f.label :latitude %><br/ >
    <%= f.number_field :latitude, :class => 'text_field', :step => 'any'%><br/ >
  </div>
  <div id="map-container">
    <p>Pick your business location on the map !</p>
    <div id="map-for-user" class="map"></div>
  </div>
</div>
<div class="actions">
  <%= f.submit "Update my informations", :class => 'btn-success update-button' %>
</div>
<% end %>
<h3 class="centered">Not happy with us?</h3>
<p class="centered">Breaks my heart... <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'btn-success update-button' %></p>
<p class="centered"><%= link_to "Go back", :back %></p>